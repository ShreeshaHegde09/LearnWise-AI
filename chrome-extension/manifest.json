{
  "manifest_version": 3,
  "name": "AI Learning System - Screen Monitor",
  "version": "1.0.0",
  "description": "Monitors screen activity for the AI Learning System",
  
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "idle",
    "background",
    "notifications"
  ],
  
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:5000/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["http://localhost:3000/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Learning Monitor"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}